<table class="table table-bordered border border-3  w-100">
	<thead>
		<tr class="bg-danger">
			<th>Id</th>
			<th>Title</th>
			<th>Start</th>
			<th>End</th>
			<th>Description</th>
			<th>Background_color</th>
			<th>Border_color</th>
			<th>Text_color</th>
		</tr>
	</thead>
	<tbody class="bg-dark text-white">
		{% for booking in bookings %}
			<tr>
				<td>{{ booking.id }}</td>
				<td>{{ booking.title }}</td>
				<td>{{ booking.start ? booking.start|date('Y-m-d') : '' }}</td>
				<td>{{ booking.end ? booking.end|date('Y-m-d') : '' }}</td>
				<td>{{ booking.description }}</td>
				<td style="background-color:{{ booking.backgroundColor }}"></td>
				<td style="background-color:{{ booking.borderColor  }}"></td>
				<td style="background-color:{{ booking.textColor }}"></td>
			</tr>
		{% endfor %}
	</tbody>
</table>
